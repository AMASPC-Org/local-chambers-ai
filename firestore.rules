rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // RBAC Helpers
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(resourceData) {
      return isAuthenticated() && request.auth.uid == resourceData.ownerId;
    }

    function isAdmin() {
      // Assuming 'admin' property on custom claims or a specific user document
      // For now, checking a custom claim 'admin' which is standard practice
      return isAuthenticated() && request.auth.token.admin == true;
    }

    // Organizations: Public read, Owner/Admin write
    match /organizations/{orgId} {
      allow read: if true;
      allow create: if isAuthenticated() && (request.resource.data.ownerId == request.auth.uid || isAdmin());
      allow update, delete: if isOwner(resource.data) || isAdmin();
      
      // Products subcollection: Inherit ownership from parent org? 
      // Firestore rules don't easily support parent data access in valid queries without extra reads.
      // So we rely on the product doc having an ownerId or matching the parent's owner if verified.
      // For simplicity in this optimization pass, we'll assume products are part of the org management.
      match /products/{productId} {
        allow read: if true;
        allow write: if isOwner(get(/databases/$(database)/documents/organizations/$(orgId)).data) || isAdmin();
      }
    }

    // Leads: Public create, Owner/Admin read/write
    match /leads/{leadId} {
      allow create: if true; // Public submission
      allow read, update, delete: if isAuthenticated() && (
        isOwner(get(/databases/$(database)/documents/organizations/$(resource.data.chamberId)).data) || 
        isAdmin()
      );
    }

    // Users profile docs: Owner only
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Venues: Read-only for now
    match /venues/{venueId} {
      allow read: if true;
      allow write: if false;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
